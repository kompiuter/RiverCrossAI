<Window x:Class="RiverCrossAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RiverCrossAI"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RiverCrossAI.ViewModels"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <Window.DataContext>
        <vm:AIViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="256" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock>
                <Run Text="States Expanded: "/>
                <Run Text="{Binding ExpandedCount}"/>
            </TextBlock>

            <TextBlock Text="Open States" Grid.Row="1" FontWeight="SemiBold"/>
            <ListView Grid.Row="2" ItemsSource="{Binding OpenStates}" MaxHeight="368" BorderThickness="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                                <Run Text="("/><Run Text="{Binding X, Mode=OneWay}"/><Run Text=","/>
                                <Run Text="{Binding Y, Mode=OneWay}"/><Run Text=","/>
                                <Run Text="{Binding Z, Mode=OneWay}"/><Run Text=")"/>
                        </TextBlock>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Style>
                    <Style TargetType="ListView">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding GoalReached}" Value="True">
                                <Setter Property="Background" Value="#BDECB6"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.Style>
            </ListView>

            <TextBlock Text="Closed States" Grid.Row="1" Grid.Column="2" FontWeight="SemiBold"/>
            <ListView Grid.Row="2" Grid.Column="2" ItemsSource="{Binding ClosedStates}" MaxHeight="368" BorderThickness="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <Run Text="("/><Run Text="{Binding X, Mode=OneWay}"/><Run Text=","/>
                            <Run Text="{Binding Y, Mode=OneWay}"/><Run Text=","/>
                            <Run Text="{Binding Z, Mode=OneWay}"/><Run Text=")"/>
                        </TextBlock>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid Grid.Row="3" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal">
                    <RadioButton Content="BFS" IsChecked="{Binding BFSEnabled}"/>
                    <RadioButton Margin="4,0,0,0" Content="DFS"/>
                </StackPanel>
            
                <TextBlock Text="Delay (ms per expansion)" Grid.Row="1"/>
                <Slider x:Name="delaySlider"
                        Minimum="0"
                        Grid.Row="2"
                        Width="162"
                        AutoToolTipPrecision="0"
                        AutoToolTipPlacement="BottomRight"
                        HorizontalAlignment="Right"
                        Maximum="1000"
                        TickFrequency="10"
                        Value="{Binding DelaySpeed}"/>
                    

                <Button Grid.Row="2"
                        Grid.Column="2"
                        Command="{Binding BeginSearchCommand}"
                        HorizontalAlignment="Right"
                        Content="Begin" />
            </Grid>
        </Grid>

    </Grid>
</Window>
